<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">


    <ImageView
        android:id="@+id/note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_music_note_24"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_song"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Levan Polka"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/name_artist"
        >

    </TextView>

    <TextView
        android:id="@+id/name_artist"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="10dp"
        android:text="3:20"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/note"
        app:layout_constraintTop_toBottomOf="@id/name_song"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/add"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>